<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        > <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/welcome">
        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|end"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_delete_outline_24"
            app:tint="@color/black" />
    </androidx.appcompat.widget.Toolbar>
        <EditText
            android:id="@+id/pid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="0sp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/update_product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dopfoto"
            android:scaleType="centerCrop"
            />

        <EditText
            android:id="@+id/update_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название услуги"
            android:layout_marginTop="100dp"
            android:textSize="25sp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/update_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Цена услуги"
            android:layout_marginTop="15dp"

            android:textSize="25sp"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/update_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание услуги"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:inputType="text"
            />

        <Button
            android:id="@+id/update_product_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:backgroundTint="@color/button"
            android:text="Изменить услугу"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
